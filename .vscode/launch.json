  "version": "0.2.0",
  "configurations": [
    {
      "cwd": "${workspaceFolder}/application",
      "type": "node",
      "request": "launch",
      "name": "Start application",
      "runtimeExecutable": "npm",
      "windows": {
        "runtimeExecutable": "npm.cmd"
      },
      "runtimeArgs": ["run-script", "start"],
      "stopOnEntry": true
    },
    {
      "cwd": "${workspaceFolder}/extensions/pinot-blanc",
      "type": "node",
      "request": "launch",
      "name": "Start Pinot Blanc extension",
      "runtimeExecutable": "npm",
      "windows": {
        "runtimeExecutable": "npm.cmd"
      },
      "runtimeArgs": ["run-script", "start"],
      "stopOnEntry": true
    }
  ]
}
